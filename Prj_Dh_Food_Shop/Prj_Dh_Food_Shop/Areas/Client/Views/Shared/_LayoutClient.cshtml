    <div id="myModal" class="modal fade" role="dialog" data-url='@Url.Action("Login", "Homes")'>
        <div class="modal_dialog" style="width:45%; margin-left:auto; margin-right: auto">

        </div>
    </div>

    <div id="myModalEdit" class="modal fade" role="dialog" data-url='@Url.Action("Edit", "Homes", new {id = id})'>
        <div class="modal_dialog" style="width:45%; margin-left:auto; margin-right: auto">
            @*partialView*@
        </div>
    </div>

    <div id="myModalDetail" class="modal fade" role="dialog" data-url='@Url.Action("Order", "Homes", new {id = id})'>
        <div class="modal_dialog" style="width:45%; margin-left:auto; margin-right: auto">
            @*partialView*@
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#loginTest').click(function () {
                event.preventDefault();
                jQuery.noConflict();
                var url = $('#myModal').data('url');
                $.get(url, function (data) {

                    $("#myModal").html(data);
                    $("#myModal").modal('show');
                });
            });
        });

        $(document).ready(function () {
            $('#EditTest').click(function () {
                event.preventDefault();
                jQuery.noConflict();
                var url = $('#myModalEdit').data('url');
                $.get(url, function (data) {

                    $("#myModalEdit").html(data);
                    $("#myModalEdit").modal('show');
                });
            });
        });

        $(document).ready(function () {
            $('#OrderHistory').click(function () {
                event.preventDefault();
                jQuery.noConflict();
                var url = $('#myModalDetail').data('url');
                $.get(url, function (data) {

                    $("#myModalDetail").html(data);
                    $("#myModalDetail").modal('show');
                });
            });
        });

    </script>


    <script>
        function editCustomer(id) {
            var model = {
                name: $('input[name="name"]').val(),
                passwords: $('input[name="passwords"]').val(),
                birth_date: $('input[name="birth_date"]').val(),
                email: $('input[name="email"]').val(),
                phone_number: $('input[name="phone_number"]').val(),
                addresss: $('input[name="addresss"]').val(),
                id_province: $('select[name="id_province"]').val(),
            }

            $.ajax({
                url: '/Homes/Edit/' + id,
                type: "POST",
                data: model,
                success: function (rs) {
                    if (rs != null && rs != undefined && rs != '') {
                        if (window.confirm(rs.msg)) {
                            if (rs.status == 1)
                                window.location.href = '/Client/Homes/Index';
                        }
                        else {
                            // They clicked no
                        }

                    } else {
                        toastr.error('Có lỗi xảy ra!');
                    }
                },
            });
        }
    </script>

</body>
</html>



