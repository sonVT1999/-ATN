@model Prj_Dh_Food_Shop.Search_Customers
@{

    var districts = (List<Prj_Dh_Food_Shop.Districts>)ViewBag.district;
    var count = 0;
}

<script>
    function addCustomer() {
        var model = {
            name: $('input[name="name"]').val(),
            username: $('input[name="username"]').val(),
            passwords: $('input[name="passwords"]').val(),
            birth_date: $('input[name="birth_date"]').val(),
            email: $('input[name="email"]').val(),
            phone_number: $('input[name="phone_number"]').val(),
            addresss: $('input[name="addresss"]').val(),
            gender: $('input[name="gender"]').val(),
            id_district: $('select[name="id_district"]').val(),
            __RequestVerificationToken: $("input[name=__RequestVerificationToken]").val()
        }

        $.ajax({
            url: '/Customers/Create',
            type: "POST",
            data: model,
            success: function (rs) {
                if (rs != null && rs != undefined && rs != '') {
                    if (window.confirm(rs.msg)) {
                        if (rs.status == 1)
                            window.location.href = '/Customers/Index';
                    }
                    else {
                        // They clicked no
                    }

                } else {
                    toastr.error('Có lỗi xảy ra!');
                }
            },
        });
    }

    function delCustomer(id) {
        $.ajax({
            url: '/Customers/Delete/' + id,
            type: "POST",
            //data: model,
            success: function (rs) {
                if (rs != null && rs != undefined && rs != '') {
                    if (window.confirm(rs.msg)) {
                        if (rs.status == 1)
                            window.location.href = '/Customers/Index';
                    }
                    else {
                        // They clicked no
                    }

                } else {
                    toastr.error('Có lỗi xảy ra!');
                }
            },
        });
    }

    function editCustomer(id) {
        var model = {
            name: $('input[name="name"]').val(),
            username: $('input[name="username"]').val(),
            passwords: $('input[name="passwords"]').val(),
            birth_date: $('input[name="birth_date"]').val(),
            email: $('input[name="email"]').val(),
            phone_number: $('input[name="phone_number"]').val(),
            addresss: $('input[name="addresss"]').val(),
            gender: $('input[name="gender"]:checked').val(),
            is_active: $('input[name="is_active"]:checked').val(),
            id_district: $('select[name="id_district"]').val(),
        }

        $.ajax({
            url: '/Customers/Edit/' + id,
            type: "POST",
            data: model,
            success: function (rs) {
                if (rs != null && rs != undefined && rs != '') {
                    if (window.confirm(rs.msg)) {
                        if (rs.status == 1)
                            window.location.href = '/Customers/Index';
                    }
                    else {
                        // They clicked no
                    }

                } else {
                    toastr.error('Có lỗi xảy ra!');
                }
            },
        });
    }
</script>

