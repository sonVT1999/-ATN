
@model Prj_Dh_Food_Shop.Orders
@{
    var customers = (List<Prj_Dh_Food_Shop.Customers>)ViewBag.customer;
    var users = (List<Prj_Dh_Food_Shop.Users>)ViewBag.user;
    var payments = (List<Prj_Dh_Food_Shop.Payment_methods>)ViewBag.payment;
}

<div class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-labelledby="ui-dialog-title-divEditCustomer"
     style="position: absolute; height: 405px; width: auto; top: 100px; left: 38%;">
    <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
        <span class="ui-dialog-title">Chỉnh sửa thông tin đơn hàng</span>
    </div>
    <div style="background-color:#FFF; width: auto; min-height: 0px;" class="ui-dialog-content ui-widget-content" scrolltop="0" scrollleft="0">
        <div style="display:none;" role="status" aria-hidden="true">
        </div>
        <table class="n-tbl-head-1" style="margin-bottom: 0">
            <tbody>
                <tr style="height: 25px">
                    <td>
                        <span>Trạng thái</span>:
                    </td>
                    <td style="width: 350px;">
                        @if (Model.statuss == 0)
                        {
                            <select class="m_text" name="statuss" required>
                                <option value="@Model.statuss" disabled selected>
                                    @if (Model.statuss == 0)
                                    {<span>Chờ duyệt</span>}
                                    else if (Model.statuss == 1)
                                    {<span>Đang vận chuyển</span>}
                                    else
                                    {<span>Đã giao</span>}
                                </option>
                                <option value="0"> Chờ duyệt </option>
                                <option value="1"> Đang vận chuyển </option>
                                <option value="2"> Đã giao </option>
                            </select>
                        }
                        else if (Model.statuss == 1)
                        {
                            <select class="m_text" name="statuss" required>
                                <option value="@Model.statuss" disabled selected>
                                    @if (Model.statuss == 0)
                                    {<span>Chờ duyệt</span>}
                                    else if (Model.statuss == 1)
                                    {<span>Đang vận chuyển</span>}
                                    else
                                    {<span>Đã giao</span>}
                                </option>
                                <option value="1"> Đang vận chuyển </option>
                                <option value="2"> Đã giao </option>
                            </select>
                        }
                        else
                        {
                            <select class="m_text" name="statuss" required>
                                <option value="@Model.statuss" disabled selected>
                                    @if (Model.statuss == 0)
                                    {<span>Chờ duyệt</span>}
                                    else if (Model.statuss == 1)
                                    {<span>Đang vận chuyển</span>}
                                    else
                                    {<span>Đã giao</span>}
                                </option>
                            </select>
                        }
                    </td>
                </tr>
                <tr style="height: 25px;">
                    <td colspan="2" align="center" style="padding-top: 10px; padding-left: 30%">
                        <input type="submit" value="Cập nhật" id="btnSave" class="n-btn-save" onclick="editOrder(@Model.id)">
                        <input type="submit" value="Hủy" id="btnBack" data-dismiss="modal" class="n-btn-cancel">
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
