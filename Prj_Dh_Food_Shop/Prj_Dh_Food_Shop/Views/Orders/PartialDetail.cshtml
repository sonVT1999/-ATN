
@model Prj_Dh_Food_Shop.Search_Orders_Detail
@{
    var count = 0;
}
<div class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-labelledby="ui-dialog-title-divEditCustomer"
     style="position: absolute; height: 343px; width: auto; top: 100px; left: 40%;">
    <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
        <span class="ui-dialog-title">Chi tiết đơn đặt hàng</span>
    </div>
    <div style="background-color:#FFF; width: auto; min-height: 0px;" class="ui-dialog-content ui-widget-content" scrolltop="0" scrollleft="0">
        <div style="display:none;" role="status" aria-hidden="true">
        </div>
        @using (Html.BeginForm("Detail", "Orders"))
        {
        <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
            <tr style="background-color: #EDEDED">
                <th style="text-align: center">
                    STT
                </th>
                <th>
                    Tên sản phẩm
                </th>
                <th style="text-align: center">
                    Đơn giá
                </th>
                <th style="text-align: center">
                    Giá tiền
                </th>
                <th style="text-align: center">
                    Sửa
                </th>
                <th style="text-align: center">
                    Xóa
                </th>
            </tr>

            @foreach (var item in Model.lstData)
            {
                count++;
                <tr>
                    <td style="text-align: center">
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.product_name)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.counts)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.amount)
                    </td>
                    <td style="text-align: center">
                        <a href="/Orders_detail/Edit/@item.id" class="btn-load"><i class="fa fa-wrench"></i></a>
                    </td>
                    <td style="text-align: center">
                        <a href="/Orders_detail/Delete/@item.id" class="btn-load"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
            <tr style="height: 25px;">
                <td colspan="2" align="center" style="padding-top: 10px; padding-left: 37%">
                    <input type="submit" value="Quay lại" id="btnBack" data-dismiss="modal" class="n-btn-cancel">
                </td>
            </tr>
        </table>
        }
    </div>
</div>
