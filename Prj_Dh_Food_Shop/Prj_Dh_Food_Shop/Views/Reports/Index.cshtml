<script>

    function ReloadChartReportTurnover() {
        var data = {
            FilterValue: $('#timeValueReportTurnover').val(),
        };

        $.ajax({
            url: '/Reports/SearchReportForChart',
            type: "POST",
            data: data,
            success: function (rs) {
                if (rs.length == 0) {
                    var chartInfo = {
                        lstDate: [],
                        lstNumberCount: [],
                        lstNumberRevenue: [],
                    }
                    LoadChart(chartInfo);
                    return;
                }
                if (rs != null && rs != undefined && rs != '') {
                    var lstDate1 = [];
                    for (var i = 0; i < rs.length; i++) {
                        var date = new Date(parseInt(rs[i].order_date.substr(6))).toLocaleDateString("en-US");
                        lstDate1.push(date);
                    }
                    var lstNumberCount1 = [];
                    for (var i = 0; i < rs.length; i++) {
                        var date = (rs[i].soluong);
                        lstNumberCount1.push(date);
                    }
                    var lstNumberRevenue1 = [];
                    for (var i = 0; i < rs.length; i++) {
                        var date = (rs[i].doanhthu);
                        lstNumberRevenue1.push(date);
                    }
                    var chartInfo = {
                        lstDate: lstDate1,
                        lstNumberCount: lstNumberCount1,
                        lstNumberRevenue: lstNumberRevenue1,
                    }
                    LoadChart(chartInfo);
                } else {
                    toastr.error('Có lỗi xảy ra!');
                }
            },
            complete: function () {
            },
        });

    }

    function LoadChart(chartInfo) {
        Highcharts.chart('container', {
            chart: {
                type: 'column',
                zoomType: 'xy',
                style: {
                    fontFamily: 'sans-serif',
                }
            },
            title: {
                text: 'Báo cáo doanh thu sản phẩm'
            },

            subtitle: {
                text: ''
            },

            yAxis: [{ // Primary yAxis
                labels: {
                    format: '{value} đơn',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                },
                title: {
                    text: 'Số đơn hàng',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                }
            }, { // Secondary yAxis
                title: {
                    text: 'Số tiền',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                },
                labels: {
                    format: '{value} vnd',
                    style: {
                        color: Highcharts.getOptions().colors[1]
                    }
                },
                opposite: true
            }],

            xAxis: [{
                categories: chartInfo.lstDate,
                crosshair: true,
                min: 0,
                max: chartInfo.lstDate.length > 5 ? 4 : chartInfo.lstDate.length - 1,
                scrollbar: {
                    enabled: true
                },
                tickLength: 0
            }],

            tooltip: {
                shared: true
            },

            plotOptions: {
                column: {
                    stacking: 'normal'
                }
            },

            series: [
                {
                    name: 'Doanh thu',
                    type: 'column',
                    data: chartInfo.lstNumberRevenue,
                    yAxis: 1,
                    color: '#008000',
                    stack: 'doanhthu',
                }, {
                    name: 'Đơn hàng',
                    type: 'spline',
                    data: chartInfo.lstNumberCount,
                    color: '#FFB800',
                }],

        });
    }
</script>

