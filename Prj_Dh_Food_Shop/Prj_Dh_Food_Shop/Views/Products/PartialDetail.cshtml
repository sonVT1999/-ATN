
@model Prj_Dh_Food_Shop.Products
@{
    var categories = (List<Prj_Dh_Food_Shop.Categories>)ViewBag.category;
}

<div class="ui-dialog ui-widget ui-widget-content ui-corner-all ui-draggable ui-resizable" tabindex="-1" role="dialog" aria-labelledby="ui-dialog-title-divEditCustomer"
     style="position: absolute; width: 50%; top: 50px; left: 32%;">
    <div class="ui-dialog-titlebar ui-widget-header ui-corner-all ui-helper-clearfix">
        <span class="ui-dialog-title">Xem thông tin sản phẩm</span>
    </div>
    <div style="background-color:#FFF; width: auto; min-height: 0px;" class="ui-dialog-content ui-widget-content" scrolltop="0" scrollleft="0">
        <div style="display:none;" role="status" aria-hidden="true">
        </div>

        @using (Html.BeginForm("Detail", "Products"))
        {
            <table class="n-tbl-head-1" style="margin-bottom: 0">
                <tbody>
                    <tr style="height: 25px">
                        <td style="width: 150px">
                            <span>Tên sản phẩm</span>:
                        </td>
                        <td>
                            @Model.name
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Đơn giá</span>:
                        </td>
                        <td>
                            @Model.price.ToString("#,##") vnđ
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Miêu tả</span>:
                        </td>
                        <td>
                            @Model.descriptions
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Khuyến mãi</span>:
                        </td>
                        <td>
                            @Model.promotion
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Sản phẩm bán chạy</span>:
                        </td>
                        <td>
                            @if (Model.is_hot == 1)
                            {<span>Có</span>}
                            else
                            {<span>Không</span>}
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Sản phẩm mới</span>:
                        </td>
                        <td>
                            @if (Model.is_new == 1)
                            {<span>Có</span>}
                            else
                            {<span>Không</span>}
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Kích hoạt</span>:
                        </td>
                        <td>
                            @if (Model.is_active == 1)
                            {<span>Có</span>}
                            else
                            {<span>Không</span>}
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Ngày tạo</span>:
                        </td>
                        <td>
                            @Model.createAt
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Loại sản phẩm</span>:
                        </td>
                        <td>
                            @Model.Categories.name
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Ảnh sản phẩm</span>:
                        </td>
                        <td>
                            <img src="@Model.image" width="100" height="100" />
                        </td>
                    </tr>
                    <tr style="height: 25px">
                        <td>
                            <span>Các ảnh khác</span>:
                        </td>
                        @{
                            string[] words = Model.imageMore?.Split(',');
                            if (words != null)
                            {
                                foreach (var item in words)
                                {
                                        <td style="width: 200px">
                                            <img src="@item" width="100" height="100" />
                                        </td>
                                }
                            }
                        }
                    </tr>
                    <tr style="height: 25px;">
                        <td colspan="2" align="center" style="padding-top: 10px; padding-left: 37%">
                            <input type="submit" value="Quay lại" id="btnBack" data-dismiss="modal" class="n-btn-cancel">
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>
