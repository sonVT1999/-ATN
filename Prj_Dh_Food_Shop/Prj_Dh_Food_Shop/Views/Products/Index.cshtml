                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.category_name)
                    </td>
                    <td style="text-align: center">
                        @if (item.is_hot == 1)
                        {<span>Có</span>}
                        else
                        {<span>Không</span>}
                    </td>
                    <td style="text-align: center">
                        @if (item.is_new == 1)
                        {<span>Có</span>}
                        else
                        {<span>Không</span>}
                    </td>
                    <td style="text-align: center">
                        @if (item.is_active == 1)
